<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anton.dietpro.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <Button
        android:gravity="top|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_my_diet"
        android:id="@+id/button_info"
        android:onClick="showMyDiary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_my_diary"
        android:gravity="top|center_horizontal"
        android:layout_below="@id/button_info"
        android:layout_alignStart="@id/button_info"
        android:layout_alignLeft="@id/button_info"
        android:width="100dp"
        android:textStyle="bold"
        android:textSize="18sp"/>


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_info"
        android:layout_alignLeft="@+id/button_info"
        android:layout_alignStart="@+id/button_info"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_product"
        android:onClick="showProduct"
        android:id="@+id/button_product" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_product"
        android:gravity="top|center_horizontal"
        android:layout_below="@id/button_product"
        android:layout_alignStart="@id/button_product"
        android:layout_alignLeft="@id/button_product"
        android:width="90dp"
        android:textStyle="bold"
        android:textSize="18sp"/>



    <Button
        android:gravity="top|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_calc"
        android:onClick="showCalc"
        android:id="@+id/button_calc"
        android:layout_alignRight="@+id/button_info"
        android:layout_alignBottom="@+id/button_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="130dp"
        android:layout_marginEnd="130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_calc"
        android:gravity="top|center_horizontal"
        android:layout_below="@id/button_calc"
        android:layout_alignStart="@id/button_calc"
        android:layout_alignLeft="@id/button_calc"
        android:width="80dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_calc"
        android:layout_alignLeft="@+id/button_calc"
        android:layout_alignStart="@+id/button_calc"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_diet"
        android:onClick="showDiet"
        android:id="@+id/button_diet" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_diet"
        android:gravity="center_horizontal"
        android:layout_below="@id/button_diet"
        android:layout_alignStart="@id/button_diet"
        android:layout_alignLeft="@id/button_diet"
        android:width="80dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>
